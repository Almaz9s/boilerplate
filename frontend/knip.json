{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": ["src/main.tsx"],
  "project": ["src/**/*.{ts,tsx}"],
  "ignore": [
    "**/index.ts",
    "src/components/ui/**",
    "src/shared/ui/**",
    "src/**/*.generated.ts"
  ],
  "ignoreDependencies": [
    "tailwindcss-animate",
    "tailwindcss",
    "postcss",
    "autoprefixer",
    "@typescript-eslint/parser"
  ],
  "ignoreExportsUsedInFile": true
}
